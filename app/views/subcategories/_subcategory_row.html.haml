%tr
  %td= subcategory.name
  %td= subcategory.description
  %td
    .action-column
      = link_to '', edit_subcategory_path(subcategory), class: 'bi bi-pencil-fill', title: 'Edit Category'
      = link_to '', subcategory_path(subcategory),
                                                  method: :delete,
                                                  data: { confirm: 'Are you sure that you want to delete this subcategory?' },
                                                  class: 'bi bi-trash-fill',
                                                  title: 'Delete Category'
